{
  "name": "quickdoc-preview",
  "displayName": "QuickDoc Preview",
  "description": "A comprehensive document viewer extension for Visual Studio Code supporting PDF, DOCX, and ODT files with enhanced features and seamless theme integration.",
  "version": "2.0.2",
  "publisher": "proindra",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "pdf",
    "pdf viewer",
    "docx",
    "docx viewer",
    "odt",
    "odt viewer",
    "document",
    "document viewer",
    "word",
    "microsoft word",
    "opendocument",
    "preview",
    "reader"
  ],
  "icon": "assets/quickdoc-preview.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/proindra/QuickDoc-Preview.git"
  },
  "bugs": {
    "url": "https://github.com/proindra/QuickDoc-Preview/issues"
  },
  "activationEvents": [
    "onCustomEditor:pdf.preview",
    "onCustomEditor:quickdoc.docxEditor"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "pdf.preview",
        "displayName": "Pdf Preview",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ]
      },
      {
        "viewType": "quickdoc.docxEditor",
        "displayName": "QuickDoc Document Viewer",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.docx"
          },
          {
            "filenamePattern": "*.odt"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "quickdoc.zoomIn",
        "title": "Zoom In",
        "icon": "$(zoom-in)"
      },
      {
        "command": "quickdoc.zoomOut",
        "title": "Zoom Out",
        "icon": "$(zoom-out)"
      },
      {
        "command": "quickdoc.resetZoom",
        "title": "Reset Zoom",
        "icon": "$(zoom-reset)"
      },
      {
        "command": "quickdoc.toggleOutline",
        "title": "Toggle Outline",
        "icon": "$(list-tree)"
      },
      {
        "command": "quickdoc.toggleTheme",
        "title": "Toggle Theme",
        "icon": "$(color-mode)"
      },
      {
        "command": "quickdoc.toggleToolbar",
        "title": "Toggle Toolbar",
        "icon": "$(toolbar)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quickdoc.zoomIn",
          "when": "activeCustomEditorId == quickdoc.docxEditor",
          "group": "navigation@1"
        },
        {
          "command": "quickdoc.zoomOut",
          "when": "activeCustomEditorId == quickdoc.docxEditor",
          "group": "navigation@2"
        },
        {
          "command": "quickdoc.resetZoom",
          "when": "activeCustomEditorId == quickdoc.docxEditor",
          "group": "navigation@3"
        },
        {
          "command": "quickdoc.toggleOutline",
          "when": "activeCustomEditorId == quickdoc.docxEditor",
          "group": "navigation@4"
        },
        {
          "command": "quickdoc.toggleTheme",
          "when": "activeCustomEditorId == quickdoc.docxEditor",
          "group": "navigation@5"
        },
        {
          "command": "quickdoc.toggleToolbar",
          "when": "activeCustomEditorId == quickdoc.docxEditor",
          "group": "navigation@6"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "PDF Preview",
      "properties": {
        "pdf-preview.default.cursor": {
          "markdownDescription": "The default cursor tool for preview.",
          "type": "string",
          "default": "select",
          "enum": [
            "select",
            "hand"
          ]
        },
        "pdf-preview.default.scale": {
          "markdownDescription": "The default zoom level for preview. Allowed values are `auto`, `page-actual`, `page-fit`, `page-width`, and 1-based scale values. (`1.0` means 100%)",
          "type": "string",
          "default": "auto",
          "pattern": "^(\\d+(?:\\.\\d+)?|auto|page-actual|page-fit|page-width)$"
        },
        "pdf-preview.default.sidebar": {
          "markdownDescription": "Show the sidebar on load. The default visibility of sidebar for preview.",
          "type": "boolean",
          "default": false
        },
        "pdf-preview.default.scrollMode": {
          "markdownDescription": "The default scroll mode for preview.",
          "type": "string",
          "default": "vertical",
          "enum": [
            "vertical",
            "horizontal",
            "wrapped"
          ]
        },
        "pdf-preview.default.spreadMode": {
          "markdownDescription": "The default spread mode for preview.",
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "odd",
            "even"
          ]
        },
        "quickdoc.font": {
          "type": "string",
          "default": "Arial",
          "description": "Font family for DOCX/ODT document rendering"
        },
        "quickdoc.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "description": "Theme for DOCX/ODT document viewer"
        },
        "quickdoc.zoomLevel": {
          "type": "number",
          "default": 1,
          "minimum": 0.5,
          "maximum": 3,
          "description": "Default zoom level for DOCX/ODT documents"
        },
        "quickdoc.showOutline": {
          "type": "boolean",
          "default": false,
          "description": "Show document outline/table of contents for DOCX/ODT"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint -c .eslintrc.json --ext .ts ./src",
    "package": "vsce package"
  },
  "dependencies": {
    "mammoth": "^1.8.1",
    "odt2html": "^1.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^12.12.21",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^10.1.0",
    "prettier": "^2.0.4",
    "typescript": "^3.7.3",
    "vsce": "^2.15.0",
    "vscode-dts": "^0.3.1",
    "vscode-test": "^1.3.0"
  },
  "extensionKind": [
    "ui"
  ]
}
